<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SongFragment"
        android:animateLayoutChanges="true">


    <ImageView
            android:id="@+id/songImageView"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_round_corners_app_icon_blue"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/hifi" />

    <TextView
            android:id="@+id/songTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/blueBottomNavBarBacgroundImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-130dp"
            android:text="Ttile"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="italic" />

    <TextView
            android:id="@+id/songArtistTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songTitleTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Artist"
            android:textColor="@color/Black"
            android:textSize="13sp"
            android:textStyle="italic" />

    <TextView
            android:id="@+id/songAlbumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songArtistTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Album"
            android:textColor="@color/Black"
            android:textSize="13sp"
            android:textStyle="italic" />

    <TextView
            android:id="@+id/songDurationStartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songProgressBar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="00:00"
            android:textColor="@color/Black"
            android:textSize="10sp"
            android:textStyle="italic" />

    <TextView
            android:id="@+id/songDurationEndTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songProgressBar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:text="1:23"
            android:textColor="@color/Black"
            android:textSize="10sp"
            android:textStyle="italic" />

    <ProgressBar
            android:id="@+id/songProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songAlbumTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/ProgressBarStyle" />

    <ImageView
            android:id="@+id/blueBottomNavBarBacgroundImageView"
            android:background="@color/AppLightBlue"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

    <ImageButton
            android:id="@+id/shuffleImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/Black"
            android:src="@drawable/ic_continuos_play" />

    <ImageButton
            android:id="@+id/fastRewindImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/shuffleImageButton"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/Black"
            android:src="@drawable/ic_fast_rewind" />

    <ImageButton
            android:id="@+id/playPauseImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/Black"
            android:src="@drawable/ic_play_circle_filled" />

    <ImageButton
            android:id="@+id/fastForwardImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="12dp"
            android:layout_toStartOf="@+id/repeatImageButton"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/Black"
            android:src="@drawable/ic_fast_forward" />

    <ImageButton
            android:id="@+id/repeatImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:tint="@color/Black"
            android:src="@drawable/ic_repeat" />

</RelativeLayout>