<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule_modal_window"
        android:paddingBottom="5dp"
        android:animateLayoutChanges="true">

    <TextView
            android:id="@+id/songTitleModalWindowSongTextView"
            android:text="song title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/AppTextColor"
            android:textStyle="italic"
            android:layout_alignParentTop="true" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/songTitleModalWindowSongTextView"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true">


        <Button
                android:id="@+id/addSongToqueueModalWindowSongButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add song to queue"
                android:background="@android:color/transparent"/>

        <Button
                android:id="@+id/removeSongFromPlaylistModalWindowSongButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="remove song from playlist"
                android:background="@android:color/transparent"/>
    </LinearLayout>


</RelativeLayout>