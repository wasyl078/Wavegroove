<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="64dp"
        android:background="@color/colorAccent"
        android:animateLayoutChanges="true">

    <ImageView
            android:id="@+id/customNotificationDefaultImageView"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/hifi" />

    <TextView
            android:id="@+id/customNotificationnothingIsPlayedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/customNotificationDefaultImageView"
            android:text="Nothing is played right now."
            android:textColor="@color/Black" />


</RelativeLayout>